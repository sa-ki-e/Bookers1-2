<h1>Books</h1>
<table>
  <th>Title</th>
  <th>Body</th>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  <% end %>
  </tr>
</table>

<h1>New book</h1>
<%= form_with model: @new_book do |f| %>
  Title<br>
  <%= f.text_field :title %><br>
  Body<br>
  <%= f.text_area :body %><br>
  <%= f.submit"Createbook" %>
<% end %>
